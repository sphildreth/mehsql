<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MehSql.App.Views.PreferencesDialog"
        Title="Preferences"
        Width="400" Height="310"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}">
  <StackPanel Margin="24" Spacing="16">
    <TextBlock Text="Preferences" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource TextBrush}"/>
    <Separator Background="{DynamicResource BorderBrush}"/>

    <!-- Theme -->
    <StackPanel Orientation="Horizontal" Spacing="12">
      <TextBlock Text="Theme:" Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center" Width="80"/>
      <ComboBox x:Name="ThemeCombo" Width="180" SelectedIndex="0">
        <ComboBoxItem Content="Dark"/>
        <ComboBoxItem Content="Light"/>
      </ComboBox>
    </StackPanel>

    <!-- Temp Folder -->
    <StackPanel Spacing="4">
      <StackPanel Orientation="Horizontal" Spacing="8">
        <TextBlock Text="Temp Folder:" Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center" Width="80"/>
        <TextBox x:Name="TempFolderText" Width="200" Foreground="{DynamicResource TextBrush}" Background="{DynamicResource SurfaceBrush}" Watermark="(system default)"/>
        <Button x:Name="TempBrowseButton" Content="..." Padding="8,4" Click="OnTempBrowseClick"/>
      </StackPanel>
      <TextBlock Text="Used for extracting compressed imports. Leave blank for system default." Foreground="{DynamicResource TextTertiaryBrush}" FontSize="10" Margin="80,0,0,0"/>
    </StackPanel>

    <!-- Buttons -->
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="0,12,0,0">
      <Button Content="OK" Padding="24,6" Click="OnOkClick"/>
      <Button Content="Cancel" Padding="24,6" Click="OnCancelClick"/>
    </StackPanel>
  </StackPanel>
</Window>
