<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MehSql.App.Controls.HighlightedSqlEditor">
  <Grid>
    <!-- Bottom: Editable TextBox with visible default text color -->
    <TextBox Name="Editor"
             FontFamily="Consolas, Monaco, monospace"
             FontSize="13"
             Padding="8"
             Background="Transparent"
             Foreground="#D4D4D4"
             CaretBrush="White"
             SelectionBrush="#3399FF"
             SelectionForegroundBrush="White"
             AcceptsReturn="True"
             AcceptsTab="True"
             TextWrapping="NoWrap"
             BorderThickness="0"
             Watermark="Enter SQL query here..." />
    
    <!-- Top: Syntax-highlighted text overlay (replaces default gray with colors) -->
    <TextBlock Name="HighlightedText"
               FontFamily="Consolas, Monaco, monospace"
               FontSize="13"
               Padding="8"
               Margin="0,0,0,0"
               TextWrapping="NoWrap"
               Background="Transparent"
               IsHitTestVisible="False" />
  </Grid>
</UserControl>
